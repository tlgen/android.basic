<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000FF"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_edit_password_detail"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="密码修改"
                android:textColor="#fff"
                android:textSize="25dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/tv_edit_password_username"
            android:layout_width="386dp"
            android:layout_height="63dp"
            android:ems="10"
            android:hint="请输入您的用户名"
            android:inputType="textPersonName"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/et_edit_password_oldPassword"
            android:layout_width="386dp"
            android:layout_height="63dp"
            android:ems="10"
            android:hint="请输入您的旧密码"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/et_edit_password_newPassword"
            android:layout_width="386dp"
            android:layout_height="63dp"
            android:ems="10"
            android:hint="请设置好您的密码"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/et_edit_password_newPasswordCheck"
            android:layout_width="386dp"
            android:layout_height="63dp"
            android:ems="10"
            android:hint="请再次确认您的密码"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/bt_edit_password_yes"
            android:layout_width="386dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="#00FF00"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/bt_edit_password_no"
            android:layout_width="386dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="#FF0000"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>
</LinearLayout>